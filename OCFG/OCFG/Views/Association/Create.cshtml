@model OCFG.Models.Association

<h1>Insertar información de asociación</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Association</h4>
    <hr />
    <form action="Association/Create" method="post" role="form" style="display: block;">

        <div class="form-group">
            <h4>Código de registo: </h4>
            <input type="number" name="registryCode" id="registryCode" tabindex="2" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <h4>Nombre: </h4>
            <input type="text" name="name" id="name" tabindex="2" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <h4>Región: </h4>
            <input type="text" name="region" id="region" tabindex="2" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <h4>Cantón: </h4>
            <input type="text" name="canton" id="caton" tabindex="2" class="form-control" placeholder="">
        </div>
        <select name="province">
            <option value="Cartago">Cartago</option>
        </select>
        <br>
        <br>
        <select name="status">
            <option value="toTheDate">Al día</option>
            <option value="pending">Pendiente</option>
        </select>
        <br>
        <br>
        <select name="active">
            <option value="active">Activa</option>
            <option value="inactive">Inactiva</option>
        </select>
        <br>
        <div class=" form-group ">
            <div class="row ">
                <div class="col-sm-6 col-sm-offset-3 ">
                    <button class="form-horizontal btn btn-default" type="submit">Registrar</button>
                </div>
            </div>
        </div>
    </form>
</div>

}

<div>
    @Html.ActionLink("Página principal", "Home/Index")
</div>
