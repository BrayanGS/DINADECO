@model OCFG.Models.Association

<h1>Insertar información de asociación</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <html>
    <body>

        <div class="form-horizontal">
            <h4>Association</h4>
            <hr />
            <form name=formulario action="Association/Create" method="post" role="form" style="display: block;">

                <div class="form-group">
                    <h4>Código de registo: </h4>
                    <input type="number" required name="registryCode" title="En este espacio solo se permite ingresar números"
                           id="registryCode" tabindex="2" min="1" class="form-control" placeholder="">
                </div>
                <div class="form-group">
                    <h4>Nombre: </h4>
                    <input type="text" required pattern="[A-Za]" name="name" title="En este espacio solo se permite ingresar letras"
                           id="name" tabindex="2" class="form-control" placeholder="">
                </div>
                <div class="form-group">
                    <h4>Región: </h4>
                    <input type="text" required pattern="[A-Za]" name="region" title="En este espacio solo se permite ingresar letras"
                           id="region" tabindex="2" class="form-control" placeholder="">
                </div>
                <div class="form-group">
                    <h4>Cantón: </h4>
                    <input type="text" required pattern="[A-Za]" name="canton" title="En este espacio solo se permite ingresar letras y números"
                           id="caton" tabindex="2" class="form-control" placeholder="">
                </div>
                <h4>Seleccione una provincia</h4>
                <select name="province">
                    <option value="Cartago">Cartago</option>
                </select>
                <br>
                <br>
                <h4>Seleccione un estado</h4>
                <select name="status">
                    <option value="toTheDate">Al día</option>
                    <option value="pending">Pendiente</option>
                </select>
                <br>
                <br>
                <h4>Seleccione la participación</h4>
                <select name="active">
                    <option value="active">Activa</option>
                    <option value="inactive">Inactiva</option>
                </select>
                <br>
                <div class=" form-group ">
                    <div class="row ">
                        <div class="col-sm-6 col-sm-offset-3 ">
                            <button class="form-horizontal btn btn-default" type="submit" onclick="alert('¿Está seguro que desea realizar esta acción?')">Registrar</button>
                        </div>
                    </div>
                </div>

            </form>
            <form class="text-center" asp-controller="AssociationController" asp-action="Create" method="get">
                
                <a href="Association/Pdf/Reporte.pdf" download="Reporte General.pdf">
                    Descargar Reporte
                </a>

            </form>
                    
        </div>
    </body>
</html>
<script>
    function verificar_campos() {
        var text = document.forms[0].firstname.value.length;
        if (text == 0) {
            document.forms[0].firstname.focus();
            alert("Debes ingresar el nombre");
            return false;
        } else {
            document.forms[0].submit();
        }
    }
</script>
}

<div>
    @Html.ActionLink("Página principal", "Home/Index")
</div>
