@model IEnumerable<OCFG.Models.Association>
@using System.Linq

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <div class="row">
            <div class="col-md-9" align="left"><h2>Búsqueda de Asociaciones</h2></div>
            <div class="col-md-3" align="right">
                <button class="btn btn-light">
                    @Html.ActionLink("Insertar nueva asociación","Create", "Association", new { idLogin = ViewBag.Id })
                </button>
            </div>
            <div class="col-md-9" align="center"><h2>Bienvenido @ViewBag.User</h2></div>
        </div>

        <hr />
        <form action="Association/Search" method="post" role="form" style="display: block;">
            <div class="row">
                <div class="col-md-2">
                    <h4>Filtrar por: </h4>
                </div>
                <div class="col-md-3">
                    <select name="filter">
                        <option value="name">Nombre</option>
                        <option value="cod">Código de Registro</option>
                        <option value="canton">Cantón</option>
                        <option value="region">Región</option>
                        <option value="province">Provincia</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="text" required name="search" title="En este espacio solo se permite ingresar letras"
                           id="search" tabindex="2" class="form-control" placeholder="">
                </div>
                <div class="form-group col-md-2">
                    <button class="form-horizontal btn btn-default" type="submit">Buscar</button>
                </div>
            </div>
        </form>
        <div>
            <table class="table">
                <tr>
                    <th>
                        C&oacute;digo de registro
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Cant&oacute;n
                    </th>
                    <th>
                        Regi&oacute;n
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        Activa
                    </th>
                    <th>
                        Provincia
                    </th>
                    <th></th>
                </tr>
                @if (!Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistryCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Canton)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Region)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Province)
                            </td>
                        </tr>
                    }
                    <tr><td colspan="4">No hay datos disponibles</td></tr>
                }
                else
                {
                    foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistryCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Canton)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Region)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Province)
                            </td>
                            <td>
                                @Html.ActionLink("Ver Detalles", "Details", new { id = item.RegistryCode })
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.RegistryCode, idLogin = ViewBag.Id })
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
}