@model IEnumerable<OCFG.Models.Employee>

@{
    ViewBag.Title = "Search";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <h2>Búsqueda de Empleados</h2>
        <hr />
        <form action="Employee/Search" method="post" role="form" style="display: block;">
            <h4>Filtrar por: </h4>
            <select name="filter">
                <option value="name">Nombre</option>
                <option value="cod">Número de cédula</option>
            </select>
            <input type="text" required name="search"
                   id="search" tabindex="2" class="form-control" placeholder="">
            <br>
            <div class=" form-group ">
                <div class="row ">
                    <div class="col-sm-6 col-sm-offset-3 ">
                        <button class="form-horizontal btn btn-default" type="submit">Buscar</button>
                    </div>
                </div>
            </div>
        </form>
        <div>
            <table class="table">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                       Apellidos
                    </th>
                    <th>
                        N&uacute;mero de Cédula
                    </th>
                    <th>
                        Cantones
                    </th>
                </tr>
                @if (!Model.Any())
                {
                    foreach (var item in Model)
                    {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCard)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Canton)
                        </td>
                        <td>
                            @Html.ActionLink("Modificar", "Edit", new { id = item.IdCard})
                        </td>
                    </tr>
                    }
                    <tr><td colspan="4">No hay datos disponibles</td></tr>
                }
                else
                {
                    foreach (var item in Model)
                    {

                        < tr >
                            < td >
                                @Html.DisplayFor(modelItem => item.Name)
                            </ td >
                            < td >
                                @Html.DisplayFor(modelItem => item.LastName)
                            </ td >
                            < td >
                                @Html.DisplayFor(modelItem => item.IdCard)
                            </ td >
                            < td >
                                @Html.DisplayFor(modelItem => item.Canton)
                            </ td >
                            < td >
                                @Html.ActionLink("Insertar Nuevo Funcionario", "Create")
                            </ td >
                        </ tr >
                        }
                    }
            </table>
        </div>
    </div>
}