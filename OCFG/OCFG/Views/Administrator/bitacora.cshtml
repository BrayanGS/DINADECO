@model IEnumerable<OCFG.Models.Bitacora>

@{
    ViewBag.Title = "bitacora";
}

<h3>Bitacora de movimientos</h3>
<br />

<form action="/Administrator/bitacora" method="post" role="form" style="display: block;">
    <div class="row">
        <div class="col-md-1">
            <h4>Fecha: </h4>
        </div>
        <div class="col-md-3">
            <input type="date" required name="fechaBuscar" title="Debe insertar una fecha"
                   id="fechaBuscar" class="form-control">
        </div>
        <div class="form-group col-md-3">
            <button class="form-horizontal btn btn-default" type="submit">Buscar</button>
        </div>
    </div>

</form>

<table class="table">
    <tr>
        <th>
            <h4>Nombre del empleado</h4>
        </th>
        <th>
            <h4>Apellido</h4>
        </th>
        <th>
            <h4>Fecha que realizo la acción</h4>
        </th>
        <th>
            <h4>Acción</h4>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LasName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Volver al Menú", "Menu")
