@model OCFG.Models.Employee

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>¿Seguro que desea eliminar el empleado?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           <h5>Nombre: </h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <h5>Apellidos</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            <h5>Cédula</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdCard)
        </dd>

        <dt>
            <h5>Dirección</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            <h5>Número de teléfono</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            <h5>Correo</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            <h5>Fecha de entrada</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateIn)
        </dd>

        <dt>
            <h5>Fecha de salida</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOut)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-primary" /> |
            @Html.ActionLink("Cancelar", "Search")
        </div>
    }
</div>
