@model OCFG.Models.Officer

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>Iniciar sesión</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div align="center">

            <form name=formulario action="Login/Create" method="post" role="form" style="display: block;">
                <img src="~/Content/image/user-login.png" class="img-rounded" width="15%" height="15%" />
                <br />
                <br />
                <br />
                <div class="row text-center" align="center">
                    <div class="col-md-4"></div>
                    <div class="col-md-4" align="center">
                        <div class="form-group">
                            <h4>Nombre de Usuario: </h4>
                            <input type="text" required name="userName" id="userName" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="row text-center" align="center">
                    <div class="col-md-4"></div>
                    <div class="col-md-4" align="center">
                        <div class="form-group">
                            <h4>Contraseña: </h4>
                            <input type="password" required name="password" id="password" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4"><h5 class="font-weight-bold">@ViewBag.Message </h5></div>
                </div>
                <label value='message'></label>
                <div class=" form-group ">
                    <div align="center">
                        <button class="form-horizontal btn btn-primary" type="submit">Ingresar</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
}
